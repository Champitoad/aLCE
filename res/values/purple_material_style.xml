<resources>
    <color name="purple_primary">#9C27B0</color>
    <color name="purple_primary_dark">#7B1FA2</color>
    <color name="purple_accent">#CE93D8</color>

    <style name="PurpleMaterial" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/purple_primary</item>
        <item name="android:colorPrimaryDark">@color/purple_primary_dark</item>
        <item name="android:colorAccent">@color/purple_accent</item>
        <item name="android:actionModeBackground">@color/purple_primary</item>
        <item name="android:alertDialogTheme">@style/PurpleMaterial.Dialog</item>
    </style>

    <style name="PurpleMaterial.Dialog" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/purple_primary</item>
        <item name="android:colorPrimaryDark">@color/purple_primary_dark</item>
        <item name="android:colorAccent">@color/purple_primary</item>
    </style>
</resources>
